.project-details__wrapper.project__everybodys-free
    .project-details__cover-wrapper
    .container
        .project-details__content-wrapper
            .project-details__introduction-wrapper
                %h1.project-details__title
                    Everybody's Free (To Wear Sunscreen)
                .columns
                    .column.is-7
                        .project-details__intro-text-wrapper
                            %p.project-details__introduction
                                Editorial design project for a 1,000-word manifesto, designed for easy distribution on an 11x17-inch white page, making it easy to read and share. The selected manifesto was "Advice, Like Youth, Probably Just Wasted on the Young," an article by Mary Schmich that gained viral popularity and was later transformed into the song "Everybody's Free (to Wear Sunscreen)" by Baz Luhrmann. Emphasizing the idea of "visual rhythm" to follow that of the song's, the final product became a small book that unfolded as the reader progressed, ending in a poster.
                            .project-details__tags-wrapper
                                .project-details__tag
                                    Editorial Design
                    .column.is-3.is-offset-2
                        .project-details__line
                            %h2.project-details__subtitle
                                Role
                            %p.project-details__subtitle-text
                                Art Direction, Editorial Design
                        .project-details__line
                            %h2.project-details__subtitle
                                Industry
                            %p.project-details__subtitle-text
                                Print, Music
                        .project-details__line
                            %h2.project-details__subtitle
                                Tools
                            %p.project-details__subtitle-text
                                InDesign, Illustrator
                        
            .project-details__colors-wrapper
                .columns
                    .column.is-6
                        .project-details_font.font1
                            %h3 Aa
                            %h4 Barlow Semi Condensed Bold Italic
                            %p.uppercase abcdefghijklmnopqrstuvwxyz
                            %p abcdefghijklmnopqrstuvwxyz
                            %p
                                = render plain: "123456789!?/@#$%&()"
                        .project-details_font.font2
                            %h4 Montserrat Black Italic
                            %p.uppercase abcdefghijklmnopqrstuvwxyz
                            %p abcdefghijklmnopqrstuvwxyz
                            %p
                                = render plain: "123456789!?/@#$%&()"
                        .project-details_font.font3
                            = image_tag "orator.svg"

                    .column.is-6
                        .columns.is-mobile.is-multiline.is-variable.is-1.project-details__columns
                            .column.is-6
                                .project-details_color.color1
                                    %p 
                                        = render plain: "#000000"
                            .column.is-6
                                .project-details_color.color2
                                    %p 
                                        = render plain: "#FFFFFF"
                            
            
            .project-details__gallery-wrapper
                .columns
                    .column.is-6
                        = image_tag "everybodys-free-cover.png", :class => "shadow-img"
                    .column.is-6
                        .projects__img-wrapper
                            = image_tag "everybodys-free-back.png", :class => "shadow-img"
                .columns
                    .column.is-12
                        %p.projects__middle-text
                .columns
                    .column.is-12
                        = image_tag "everybodys-free-open.png"
                .columns
                    .column.is-12
                        = image_tag "everybodys-free-poster.png"
                    
                
